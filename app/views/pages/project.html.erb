<!DOCTYPE html>
<html lang="en">
<head>
  <!-- Include Bootstrap CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" integrity="..." crossorigin="anonymous">

  <!-- Include your custom CSS -->
  <link rel="stylesheet" href="styles.css">
  

  <title>My Projects</title>
</head>
<body class="d-flex flex-column min-vh-100">

  <div class="container-fluid flex-grow-1">

    <!-- SECTION 1: HEADER -->
    <div class="row justify-content-center text-center my-4">
     <section class="encabezado">
      <div class="col-md-6">
        <h1 class="encabezado">My Projects</h1>
      </div>
      </section>
    </div>

    <!-- SECTION 2: CAROUSEL -->
    <div class="row justify-content-center mb-4">
    <section class="carousel">
      <div class="col-md-8">
        <div id="carouselExample" class="carousel slide" data-bs-ride="carousel">
          <div class="carousel-inner">
            <!-- Carousel Items -->
            <div class="carousel-item active">
              <img src="https://i.imgur.com/08nD8sz.png" class="d-block w-100" alt="Image 1">
              <div class="carousel-caption d-none d-md-block">
                <p>Bass Project</p>
              </div>
            </div>

            <div class="carousel-inner">
            <!-- Carousel Items -->
            <div class="carousel-item active">
              <img src="https://i.imgur.com/BOWKu5s.png" class="d-block w-100" alt="Image 1">
              <div class="carousel-caption d-none d-md-block">
                <p>Bolt Project</p>
              </div>
            </div>
          </div>
          <!-- Carousel Controls -->
          <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </button>
        </div>
      </div>
      </section>
    </div>

  </div>

  <!-- SECTION 3: FOOTER -->
  <footer class="mt-auto">
  <section class="piepagina">
    <div class="container text-center">
      <div class="row">
        <div class="col">
          <!-- Social Media Icons and Links -->
          <a href="https://github.com/gfrancoferreria" class="footer-link"><%= image_tag('https://www.shareicon.net/data/2016/06/20/606964_github_4096x4096.png', alt: 'GitHub') %></a>
          <a href="https://www.linkedin.com/in/gabriel-franco-ferreria/" class="footer-link"><%= image_tag('https://www.mastertotaalinrichting.nl/images/soc-icons/linkedin.png', alt: 'LinkedIn') %></a>
          <a href="https://twitter.com/" class="footer-link"><%= image_tag('https://toppng.com/public/uploads/preview/twitter-x-icon-logo-116902890413xbfexhf8l.webp', alt: 'Twitter') %></a>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <p class="copyright">&copy; 2024 Gabriel Franco Ferrer√≠a. All Rights Reserved.</p>
        </div>
      </div>
    </div>
    </section>
  </footer>

  <!-- Bootstrap JS (optional, for Bootstrap features like dropdowns) -->
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="..." crossorigin="anonymous"></script>

</body>
</html>

